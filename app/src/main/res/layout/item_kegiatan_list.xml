<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Gambar -->
        <ImageView
            android:id="@+id/ivGambarList"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_event1"
            android:contentDescription="Gambar kegiatan"/>

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Jenis -->
            <TextView
                android:id="@+id/tvJenisList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WORKSHOP"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#3B6EF5"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="#E8EEFF"
                android:layout_marginBottom="4dp"/>

            <!-- Judul -->
            <TextView
                android:id="@+id/tvJudulList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Workshop Android Development"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Detail -->
            <TextView
                android:id="@+id/tvDetailList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 Jan 2025, 14.00 - Lab FTI"
                android:textSize="11sp"
                android:textColor="#888888"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Button -->
            <Button
                android:id="@+id/btnDetailList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat"
                android:textSize="12sp"
                android:backgroundTint="#E8EEFF"
                android:textColor="#3B6EF5"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>