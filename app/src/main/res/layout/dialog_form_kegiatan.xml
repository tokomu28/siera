<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Foto Kegiatan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/ivFotoKegiatan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="ðŸ“·"
                android:textSize="48sp"
                android:gravity="center"
                android:background="#F0F0F0"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnPilihFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Foto"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>
        </LinearLayout>

        <!-- Nama Kegiatan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Kegiatan"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etNamaKegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama kegiatan"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Jenis Kegiatan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kegiatan"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerJenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Penyelenggara -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penyelenggara"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etPenyelenggara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan penyelenggara"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Masukkan deskripsi kegiatan"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:gravity="top"
            android:layout_marginBottom="12dp"/>

        <!-- Tanggal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etHari"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hari"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <EditText
                android:id="@+id/etBulan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Bulan"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <EditText
                android:id="@+id/etTahun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Tahun"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Waktu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu (Format: 14.00)"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: 14.00"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Lokasi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: FIKES, Aula Utama"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:textColor="#666666"
                android:background="#E0E0E0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="#FFFFFF"
                android:background="#1F3C88"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>