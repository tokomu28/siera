<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gambar Kegiatan -->
        <ImageView
            android:id="@+id/ivGambar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_event1"
            android:contentDescription="Gambar kegiatan"/>

        <!-- Konten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Jenis Kegiatan -->
            <TextView
                android:id="@+id/tvJenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WORKSHOP"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_jenis"
                android:layout_marginBottom="8dp"/>

            <!-- Judul Kegiatan -->
            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Workshop Android Development"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Detail: Tanggal, Waktu, Lokasi -->
            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 Jan 2025, 14.00 - Lab Komputer FTI"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginBottom="12dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Button Detail -->
            <Button
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:layout_gravity="end"
                android:backgroundTint="#E8EEFF"
                android:textColor="#3B6EF5"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>